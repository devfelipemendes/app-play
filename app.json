{
  "expo": {
    "name": "Play Móvel",
    "slug": "PlayMovel",
    "owner": "playmovel",
    "version": "5.0.2",
    "orientation": "portrait",
    "icon": "./assets/AssetsPartners/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.mobile.ios.infiniti",
      "buildNumber": "7",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Precisamos acessar sua câmera para escanear o código de barras do seu chip SIM Card durante o cadastro.",
        "NSPhotoLibraryUsageDescription": "Precisamos acessar suas fotos para permitir que você escolha uma imagem de perfil.",
        "NSLocationWhenInUseUsageDescription": "Precisamos acessar sua localização para mostrar lojas e serviços próximos a você.",
        "NSLocationAlwaysUsageDescription": "Precisamos acessar sua localização mesmo quando o app está em segundo plano para fornecer serviços baseados em localização.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Precisamos acessar sua localização para fornecer serviços baseados em localização.",
        "NSFaceIDUsageDescription": "Este app usa Face ID para autenticar seu login de forma segura.",
        "UIViewControllerBasedStatusBarAppearance": false
      }
    },
    "android": {
      "package": "app.mobile.ios.infiniti",
      "versionCode": 406,
      "adaptiveIcon": {
        "foregroundImage": "./assets/AssetsPartners/adaptive-icon.png",
        "backgroundColor": "#000624"
      },
      "softwareKeyboardLayoutMode": "pan",
      "screenOrientation": "portrait",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/AssetsPartners/splash.png",
          "imageWidth": 400,
          "resizeMode": "contain",
          "backgroundColor": "#000624"
        }
      ],
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Precisamos acessar sua câmera para escanear o código de barras do seu chip SIM Card durante o cadastro."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "kotlinVersion": "1.9.25"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "supportEmail": "suporte@playmovel.com.br",
      "supportPhone": "+55 11 0000-0000",
      "websiteUrl": "https://playmovel.com.br",
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "a2c2d022-685b-4ca6-9cd1-57d4c26e5468"
      }
    }
  }
}
